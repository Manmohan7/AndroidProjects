<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tourguide.MainActivity">

    <TextView
        android:id="@+id/attract"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textSize="24sp"
        android:background="@color/Attractions"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingLeft="12dp"
        android:text="@string/attract" />

    <TextView
        android:id="@+id/restraunt"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textSize="24sp"
        android:paddingLeft="12dp"
        android:textColor="@android:color/white"
        android:background="@color/Restaurants"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="@string/restau"/>

    <TextView
        android:id="@+id/hotel"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:background="@color/Hotels"
        android:text="@string/hotels"/>

    <TextView
        android:id="@+id/events"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/events"
        android:gravity="center_vertical"
        android:background="@color/Events"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</LinearLayout>
